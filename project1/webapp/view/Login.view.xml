<mvc:View controllerName="project1.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	
    xmlns="sap.m">
	<Page
		title="Login"
		class="sapUiContentPadding sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--content sapUiResponsivePadding--footer"
		showNavButton="true" >
		<headerContent>
			<Button icon="sap-icon://action" tooltip="Share" />
		</headerContent>
		<subHeader>
			<OverflowToolbar>
				<SearchField />
			</OverflowToolbar>
		</subHeader>
		<content>
				<VBox
		class="sapUiSmallMargin"
				>
		
		<NavContainer 
			navigationFinished="onNavigationFinished"
			id="navCon"
			width="45%"
			height="16em"
			class="navContainerControl sapUiSmallMarginBottom">
			<Page
				id="p1"
				title="Login" >
				
				<Button width="150px"
				 type="Emphasized"
				text="Login"
				press="handleNav">
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
				<customData>
					<core:CustomData
						key="target"
						value="p2" />
				</customData>
			</Button>

			<Button width="150px" type="Ghost" text=
				"Sign Up" press="handleNav"/>

			<Input placeholder="Enter text"/>
			<Input placeholder="Enter text" />
			<Input placeholder="Enter text"/>
			<Input placeholder="Enter text" />
			 <Button width="150px" type="Emphasized"
				text="Confirm"
				press="handleNav" />

			</Page>
			<Page
				id="p2"
				title="Sign Up" >
				<Button width="150px"
				 type="Ghost"
				text="Login"
				press="handleNav" />


				<Button width="150px" type="Emphasized"
				text="Sign Up"
				press="handleNav">

				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
				<customData>
					<core:CustomData
						key="target"
						value="p1" />
				</customData>
			</Button >
<!-- form -->
<Input placeholder="Enter text"/>
			<Input placeholder="Enter text" />
			<Input placeholder="Enter text"/>
			<Input placeholder="Enter text" />
			 <Button width="150px" type="Emphasized"
				text="Confirm"
				press="handleNav" />

			</Page>
			
		</NavContainer>
		<HBox>
			<Button 
				text="Back"
				type="Back"
				press="handleNav">
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
			</Button>
			<Select id="animationSelect">
				<core:Item text="Slide animation" key="slide" />
				<core:Item text="Base slide animation" key="baseSlide" />
				<core:Item text="Fade animation" key="fade" />
				<core:Item text="Flip animation" key="flip" />
				<core:Item text="Show animation" key="show" />
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
			</Select>
		</HBox>

	</VBox>


		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button text="Accept" type="Accept" press="handleNav" />
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>